    "group/volume": {
        "oritentation": "vertical",
        "modules": [
            "wireplumber",
            "cava",
        ]
    },
    "wireplumber": {
        "format": "{volume}% {icon}",
        "format-muted": "ÔÄ¶",
        "on-click": "helvum",
        "format-icons": [
            "ÔÄ¶",
            "ÔÄß",
            "ÔÄ®"
        ]
    },
    "user": {
        "format": "{user} (up {work_H}H)",
        "interval": 60,
        "height": 30,
        "width": 30,
        "icon": true
    },
    "systemd-failed-units": {
